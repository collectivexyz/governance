{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2021",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "declaration": true,
    "moduleResolution": "node",
    "strict": true
  },
  "esModuleInterop": true,
  "exclude": [
    "**/*.d.ts",
    "node_modules",
    "dist",
    "example"
  ]
}